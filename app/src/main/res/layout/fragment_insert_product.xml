<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.fragment.InsertProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Add Product"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Product Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Description" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Price -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Price"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Category -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Category" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Stock Count -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductStockCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductStockCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Stock Count"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Owner -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Owner" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Color -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Color" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Size -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Size" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Label" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product Star -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProductStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductStar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Star"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Product Pictures -->
            <TextView
                android:id="@+id/tvProductPictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Product Pictures"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Picture" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>